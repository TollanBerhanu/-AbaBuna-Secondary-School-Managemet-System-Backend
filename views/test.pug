extends layout

block content
    if msg !== undefined
        h2=msg
    style(type='text/css').
        .tg {
            border-collapse: collapse;
            border-color: #aaa;
            border-spacing: 0;
        }

        .tg td {
            background-color: #fff;
            border-color: #aaa;
            border-style: solid;
            border-width: 1px;
            color: #333;
            font-family: Arial, sans-serif;
            font-size: 14px;
            overflow: hidden;
            padding: 2px 20px;
            word-break: normal;
        }

        .tg th {
            background-color: #f38630;
            border-color: #aaa;
            border-style: solid;
            border-width: 1px;
            color: #fff;
            font-family: Arial, sans-serif;
            font-size: 14px;
            font-weight: normal;
            overflow: hidden;
            padding: 2px 20px;
            word-break: normal;
        }

        .tg .tg-c3ow {
            border-color: inherit;
            text-align: center;
            vertical-align: top
        }

        .tg .tg-ksrh {
            background-color: #000000;
            border-color: inherit;
            text-align: center;
            vertical-align: top
        }
    for grade in data
        table.tg
            thead
                tr
                    th.tg-c3ow(colspan='2') Section
                    for section in grade['sections']
                        th.tg-c3ow #{section}
            tbody
                for day_data,day in grade['data']
                    for p_data,p in day_data
                        tr
                            if p === '1'
                                td.tg-c3ow(rowspan='7') #{day}
                            td.tg-c3ow #{p}
                            for sec_data in p_data
                                td.tg-c3ow #{sec_data}
                            if p === '3'
                                tr
                                    td.tg-ksrh
                                    for sec_d in p_data
                                        td.tg-ksrh
        br
        br